APP_NAME="Laravel Testing"
APP_ENV=testing
APP_KEY=base64:test-key-will-be-generated-by-artisan
APP_DEBUG=true
APP_URL=http://localhost

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Test Database (safe credentials)
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=testing
DB_USERNAME=laravel
DB_PASSWORD=laravel

# Use array drivers for speed
BROADCAST_DRIVER=log
CACHE_DRIVER=array
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=array
SESSION_LIFETIME=120

# Disable external services in tests
MAIL_MAILER=array

# Test-specific settings
BCRYPT_ROUNDS=4